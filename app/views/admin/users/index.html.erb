<h2>管理画面ユーザーの画面</h2>
<%= link_to '新規ユーザーを作成する', new_admin_user_path %>

<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザーネーム</th>
      <th>タスク数</th>
      <th>管理者</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.tasks.count %></td>
        <td><%= user.admin %></td>
        <td><%= link_to '詳細',admin_user_path(user.id) %></td>
        <% if current_user.admin? && !(current_user == user) %>
        <td><%= link_to '編集',edit_admin_user_path(user.id)%></td>
        <td><%= link_to '削除',admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% end %>
　　　　</tr>
    <% end %>
  </tbody>
</table>
